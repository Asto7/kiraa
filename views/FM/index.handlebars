{{#each FM}}

  <div class="card card-body mb-2">
    <a href="/FM/share/{{title}}"style="cursor:pointer; position:absolute; color:white;background-color:#1DA1F2; border-radius:1em; padding:5px;right:1em; top:1em;">Share <i class="fa fa-share" aria-hidden="true"></i></a>
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p>Creation date: {{creationDate}}</p>

    <div style="display:flex; justify-content:space-between;"class="">
          <a class="btn btn-dark  mb-2" style='background-color:#123C69; height:20%; width:49.5%; display:inline; float:left;' href="/FM/visit/{{id}}">Visit</a>
          <a class="btn btn-dark  mb-2" style='background-color:#123C69; height:20%; width:49.5%; display:inline; float:right;' href="/FM/edit/{{id}}">Compile & Edit</a>
    </div>
    
    <a style='margin-top:0.5rem;' class="btn btn-dark btn-block mb-2" href="/FM/delete/{{id}}">Delete</a>
  </div>

{{else}}
  <p>No Code made so far</p>
{{/each}}
